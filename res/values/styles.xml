<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Reverserecipe" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_reverserecipe</item>
        <item name="popupMenuStyle">@style/PopupMenu.Reverserecipe</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Reverserecipe</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Reverserecipe</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Reverserecipe</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Reverserecipe</item>
        <item name="actionModeBackground">@drawable/cab_background_top_reverserecipe</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_reverserecipe</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Reverserecipe</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Reverserecipe.Widget</item>
    </style>

    <style name="ActionBar.Solid.Reverserecipe" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_reverserecipe</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_reverserecipe</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_reverserecipe</item>
        <item name="progressBarStyle">@style/ProgressBar.Reverserecipe</item>
    </style>

    <style name="ActionBar.Transparent.Reverserecipe" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_reverserecipe</item>
        <item name="progressBarStyle">@style/ProgressBar.Reverserecipe</item>
    </style>

    <style name="PopupMenu.Reverserecipe" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_reverserecipe</item>
    </style>

    <style name="DropDownListView.Reverserecipe" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_reverserecipe</item>
    </style>

    <style name="ActionBarTabStyle.Reverserecipe" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_reverserecipe</item>
    </style>

    <style name="DropDownNav.Reverserecipe" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_reverserecipe</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_reverserecipe</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_reverserecipe</item>
    </style>

    <style name="ProgressBar.Reverserecipe" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_reverserecipe</item>
    </style>

    <style name="ActionButton.CloseMode.Reverserecipe" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_reverserecipe</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Reverserecipe.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Reverserecipe</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Reverserecipe</item>
    </style>

</resources>