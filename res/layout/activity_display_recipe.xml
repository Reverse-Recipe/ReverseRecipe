<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".DisplayRecipeActivity" >

        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/food_network_logo"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textSize="22sp"
            android:minHeight="100dp" 
            android:paddingLeft="10dp"
            android:layout_marginBottom="10dp"/>

        <TableLayout
            android:id="@+id/recipeTable"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeTitle" >

            <TableRow
                android:id="@+id/firstDetailsRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <View android:layout_weight="1" />

                <TextView
                    android:id="@+id/recipeDifficulty"
                    android:layout_weight="5"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/recipeAuthor"
                    android:layout_weight="5"
                    android:gravity="right"
                    android:textSize="12sp" />

                <View android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:id="@+id/secondDetailsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <View android:layout_weight="1" />

                <TextView
                    android:id="@+id/recipePrepTime"
                    android:layout_weight="5"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/recipeCookTime"
                    android:layout_weight="5"
                    android:gravity="right"
                    android:textSize="12sp" />

                <View android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:id="@+id/thirdDetailsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <View android:layout_weight="1" />

                <TextView
                    android:id="@+id/recipeYield"
                    android:layout_weight="5"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/recipeRating"
                    android:layout_weight="5"
                    android:gravity="right"
                    android:textSize="12sp" />

                <View android:layout_weight="1" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/ingredientsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/recipeTable"
            android:layout_marginBottom="10dp"
            android:text="@string/ingredients_label"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ingredientList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredientsLabel"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/methodLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ingredientList"
            android:layout_marginBottom="10dp"
            android:text="@string/method_label"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/methodList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/methodLabel"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textSize="12sp" />
    </RelativeLayout>

</ScrollView>