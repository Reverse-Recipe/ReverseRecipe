<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="reverse.recipe.reverserecipe"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="reverse.recipe.reverserecipe.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="reverse.recipe.reverserecipe.SearchActivity"
            android:label="@string/title_activity_search"
            android:parentActivityName="com.example.kawtoolkit.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kawtoolkit.MainActivity" />
        </activity>
        <activity
            android:name="reverse.recipe.reverserecipe.DisplayRecipeActivity"
            android:label="@string/title_activity_display_recipe"
            android:parentActivityName="com.example.kawtoolkit.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kawtoolkit.MainActivity" />
        </activity>
        <activity
            android:name="reverse.recipe.reverserecipe.IngredientSearchActivity"
            android:label="@string/title_activity_ingredient_search"
            android:parentActivityName="reverse.recipe.reverserecipe.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="reverse.recipe.reverserecipe.MainActivity" />
        </activity>
        <activity
            android:name="reverse.recipe.reverserecipe.MyPantryActivity"
            android:label="@string/title_activity_my_pantry"
            android:parentActivityName="reverse.recipe.reverserecipe.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="reverse.recipe.reverserecipe.MainActivity" />
        </activity>
    </application>

</manifest>